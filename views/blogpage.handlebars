{{! blog page }}
<main>
  {{! show blog }}
  <article>
    <h2>{{title}}</h2>
    <p>{{blog}}</p>
    <p>Created by: {{user.username}} | Date: {{format_date createdAt}}</p>

  </article>

  {{! if logged in allow create comment }}
  {{#if logged_in}}
    <form id="new-comment-form">
      <label>Comment:</label>
      <textarea id="new-comment-input" placeholder="Write comment"></textarea>
      <button type="submit">Submit</button>
    </form>
  {{/if}}

  {{! comment history }}
  <section>
    <div> 
        {{! comment card}}
        {{#each comments}}
        <p>{{comment}}</p>
            </div>
    <div> 
        {{! created by card}}
        <p>By: {{user.username}} on {{format_date createdAt}}</p>
    </div>
        {{/each}}
  </section>
</main>