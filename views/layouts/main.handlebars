<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
       {{!-- <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"/> --}}
    <title>TheBlog</title>
  </head>
  <body>

    {{! Header }}
    <header>
      <h1>
        <a href="/">The<span id="title-blog">BLOG</span></a>
      </h1>

      {{! logout/login/sign up  }}
      <nav>
        <ul>
             <li>
              <a href="/">Home</a>
            </li>
          {{! if logged in show sign-out button }}
          {{#if logged_in}}
            <li>
              <a href="/signout">Sign out</a>
            </li>
         

            {{! if logged out show login/signup }}
          {{else}}
            <li>
              <a href="/login">
                <span>Login</span>
              </a>
            </li>
            <li>
              <a href="/signup">
                <span>Sign Up</span>
              </a>
            </li>
          {{/if}}
        </ul>
      </nav>
    </header>

    {{! handlebars template }}
    <section>
      {{{body}}}
    </section>

    {{! footer }}
    <Footer>
      <p>Designed by Travis Shanhun</p>
      <p>2023</p>
    </Footer>
  </body>
</html>